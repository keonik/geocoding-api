# Environment
GO_ENV=development

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this
API_SECRET_KEY=your_api_secret_key_change_this

# Optional: Rate Limiting
