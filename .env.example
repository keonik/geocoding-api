# Database Configuration
DB_USER=geocoding_user
DB_PASSWORD=secure_password_change_me
DB_NAME=geocoding_db
DB_SSLMODE=disable

# API Configuration
API_PORT=8080
API_EXTERNAL_PORT=8080
